{
	"name": "snap",
	"version": "0.0.1",
	"description": "swiftly snap any web",
	"type": "module",
	"main": "src/server.js",
	"scripts": {
		"start": "NODE_ENV=production && node ./src/server.js",
		"dev": "nodemon ./src/server.js",
		"test:watch": "vitest watch",
		"test": "NODE_ENV=testing vitest --run",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint:check": "eslint .",
		"lint": "eslint --fix ."
	},
	"keywords": [
		"screenshot",
		"capture",
		"website",
		"snap"
	],
	"author": "wajeht",
	"license": "MIT",
	"devDependencies": {
		"eslint": "^8.57.0",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"supertest": "^6.3.4",
		"vitest": "^1.3.1"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"fastq": "^1.17.1",
		"helmet": "^7.1.0",
		"node-cron": "^3.0.3",
		"puppeteer": "^22.2.0",
		"sharp": "^0.33.2"
	}
